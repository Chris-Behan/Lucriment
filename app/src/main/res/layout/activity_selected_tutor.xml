<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lucriment.lucriment.SelectedTutorActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <TextView
            android:id="@+id/tutorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tutorName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:adjustViewBounds="true"
            android:maxHeight="80dp"
            android:maxWidth="80dp"
            app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

        <Button
            android:id="@+id/contactButton"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:allowUndo="false"
            android:autoText="false"
            android:maxHeight="20dp"
            android:text="Contact" />

        <TextView
            android:id="@+id/educationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contactButton"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="82dp"
            android:text="Education:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/decriptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/educationLabel"
            android:layout_alignStart="@+id/educationLabel"
            android:layout_below="@+id/educationLabel"
            android:layout_marginTop="37dp"
            android:text="Bio:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/rateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/decriptionLabel"
            android:layout_alignStart="@+id/decriptionLabel"
            android:layout_below="@+id/decriptionLabel"
            android:layout_marginTop="37dp"
            android:text="Rate per hour:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/contactButton"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/contactButton"
            android:layout_marginBottom="20dp"
            android:text="Back" />

        <TextView
            android:id="@+id/tutorEducationFIeld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/educationLabel"
            android:layout_toEndOf="@+id/tutorName"
            android:layout_toRightOf="@+id/tutorName"
            android:text="TextView" />

        <TextView
            android:id="@+id/tutorBioField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rateLabel"
            android:layout_alignLeft="@+id/tutorEducationFIeld"
            android:layout_alignStart="@+id/tutorEducationFIeld"
            android:text="TextView" />

        <TextView
            android:id="@+id/tutorRateField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rateLabel"
            android:layout_alignLeft="@+id/tutorBioField"
            android:layout_alignStart="@+id/tutorBioField"
            android:text="TextView" />

        <TextView
            android:id="@+id/classesField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_below="@+id/contactButton"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginTop="14dp" />

        <TextView
            android:id="@+id/classesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Classes Taught:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/classesField"
            android:layout_toLeftOf="@+id/backButton"
            android:layout_toStartOf="@+id/backButton" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
