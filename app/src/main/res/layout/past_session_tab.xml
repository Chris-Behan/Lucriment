<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/pastSessionsLabel"
        android:layout_width="match_parent"

        android:layout_height="30dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"

        android:textColor="#ffffff"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:text="Past Sessions:" />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/pastSessionsLabel"
        android:id="@+id/pastSessionList"
        >

    </ListView>

    <TextView
        android:id="@+id/declineSessionsLabel"
        android:layout_width="match_parent"

        android:layout_height="30dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:layout_below="@id/pastSessionList"
        android:textColor="#ffffff"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:text="Declined Sessions:" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/declineSessionsLabel"
        android:id="@+id/declineSessionsList">

    </ListView>
    <TextView
        android:id="@+id/cancelledSessionsLabel"
        android:layout_width="match_parent"

        android:layout_height="30dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:layout_below="@id/declineSessionsList"
        android:textColor="#ffffff"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:text="Cancelled Sessions:" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cancelledSessionsLabel"
        android:id="@+id/cancelledSessionsList"
        
        >

    </ListView>





</RelativeLayout>