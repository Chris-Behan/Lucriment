<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lucriment.lucriment.SettingsActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintRight_toRightOf="parent"

        tools:layout_constraintLeft_creator="1"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/settingsPic"
            android:layout_width="1000dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/cast_expanded_controller_seekbar_thumb"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/profileButton"
            android:layout_toStartOf="@+id/profileButton"
            android:layout_alignBottom="@+id/profileButton" />

        <Button
            android:id="@+id/profileButton"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:background="@color/cardview_light_background"
            android:text="View and Edit Your Profile"
            android:textAllCaps="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <include
            android:id="@+id/navigation"
            layout="@layout/activity_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            tools:layout_editor_absoluteY="459dp"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="logout"
            android:layout_above="@+id/navigation"
            android:layout_centerHorizontal="true" />

        <ListView
            android:id="@+id/options"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/settingsPic"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
