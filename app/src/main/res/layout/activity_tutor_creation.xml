<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lucriment.lucriment.TutorCreation">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <EditText
            android:id="@+id/educationField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Postal Code"
            android:layout_below="@+id/province"
            android:inputType="textPostalAddress" />

        <TextView
            android:id="@+id/subjectsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subjects Taught:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/educationField"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:id="@+id/subjectSpinner"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_below="@+id/addClassButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Spinner
            android:id="@+id/classSpinner"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_below="@+id/subjectSpinner"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/addClassButton"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded_button"
            android:text="Add Class"
            android:textColor="#ffffff"
            android:visibility="visible"
            android:layout_below="@+id/educationField"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ListView
            android:id="@+id/taughtlist"
            android:layout_width="170dp"
            android:layout_height="100dp"

            android:layout_below="@+id/subjectsLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText

            android:id="@+id/rateField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hourly Rate"
            android:inputType="number"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rateField"
            android:inputType="none"
            android:id="@+id/dateOfBirth"
            android:hint="Date of Birth"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateOfBirth"
            android:inputType="phone"
            android:hint="Phone Number"
            android:id="@+id/phoneNumber"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addressLine"
            android:layout_below="@id/phoneNumber"
            android:hint="Address"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addressLine"
            android:id="@+id/city"
            android:hint="City"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/province"
            android:layout_below="@id/city"
            android:hint="Province"/>


        <Button
            android:id="@+id/becomeTutor"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Become a Tutor"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
