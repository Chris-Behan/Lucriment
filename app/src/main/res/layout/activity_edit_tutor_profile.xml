<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lucriment.lucriment.EditTutorProfile">

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_marginTop="20dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

    <TextView
        android:id="@+id/changeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilePicture"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:text="Change Profile Photo" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigation"
        android:layout_below="@id/changeText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_above="@+id/navigation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/changeText"

        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/textView10"
                android:layout_width="90dp"
                android:text="First Name"
                android:textSize="17sp"
                android:textColor="#808080"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/enterFirstName"
                android:text="First Name"
                android:editable="false"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView10"
                android:layout_toEndOf="@+id/textView10" />
                <View
                    android:id="@+id/line2"
                    android:layout_width="350dp"
                    android:layout_height="1dip"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/enterFirstName"
                    android:background="#c9c9c9"
                    android:padding="2dip" />
            </RelativeLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">


            <RelativeLayout>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/textView12"
                android:layout_width="90dp"
                android:text="Last Name"
                android:textSize="17sp"
                android:textColor="#808080"
                android:layout_height="wrap_content"  />

            <EditText
                android:id="@+id/enterLastName"
                android:text="Last Name"
                android:editable="false"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView12"
                android:layout_toEndOf="@+id/textView12" />
                <View
                    android:id="@+id/line3"
                    android:layout_width="350dp"
                    android:layout_height="1dip"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/enterLastName"
                    android:background="#c9c9c9"
                    android:padding="2dip" />
            </RelativeLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <RelativeLayout>

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="About"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />
                <TextView
                    android:id="@+id/aboutField"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:minHeight="80dp"
                    android:layout_below="@+id/textView13"
                    android:layout_alignLeft="@+id/textView13"
                    android:layout_alignStart="@+id/textView13" />
                <View
                    android:id="@+id/line4"
                    android:layout_width="350dp"
                    android:layout_height="1dip"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/aboutField"
                    android:background="#c9c9c9"
                    android:padding="2dip" />


            </RelativeLayout>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <RelativeLayout>
            <TextView
                android:id="@+id/textView14"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="Subjects" />

                <TextView
                    android:id="@+id/subjectsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:minHeight="80dp"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/textView14"
                    android:layout_alignLeft="@+id/textView14"
                    android:layout_alignStart="@+id/textView14" />
                <View
                    android:id="@+id/line5"
                    android:layout_width="350dp"
                    android:layout_height="1dip"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/subjectsText"
                    android:background="#c9c9c9"
                    android:padding="2dip" />


            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <RelativeLayout>
            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="Postal Code"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" />
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:text=""
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView16"
                    android:layout_toEndOf="@+id/textView16"
                    android:layout_marginLeft="23dp"
                    android:layout_marginStart="23dp" />
                <View
                    android:id="@+id/line6"
                    android:layout_width="350dp"
                    android:layout_height="1dip"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/textView16"
                    android:background="#c9c9c9"
                    android:padding="2dip" />


            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <RelativeLayout>
            <TextView
                android:id="@+id/rateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate"
                android:layout_marginLeft="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="200dp"
                android:background="@null"
                android:text=" "
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/rateLabel" />
                <View
                    android:id="@+id/line7"
                    android:layout_width="350dp"
                    android:layout_height="1dip"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/rateLabel"
                    android:background="#c9c9c9"
                    android:padding="2dip" />
            </RelativeLayout>
        </TableRow>

    </TableLayout>
    </ScrollView>
</RelativeLayout>
