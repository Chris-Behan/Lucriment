<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lucriment.lucriment.Tutors.SearchForSubjects">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintRight_toRightOf="parent"

        tools:layout_constraintLeft_creator="1"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       >

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="30dip"

            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
          />
        <SearchView
            android:id="@+id/subjectSearch"
            android:layout_marginTop="5dp"
            android:queryHint="Search..."
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:iconifiedByDefault="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <android.support.v7.widget.RecyclerView
            android:focusable="true"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/subjectRecyclerView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/line3"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</android.support.constraint.RelativeLayout>
